{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch (web)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/Backend/bin/Debug/net6.0/Backend.dll",  // Ajusta esto seg√∫n el nombre de tu archivo de salida
        "args": [],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\b(http://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Production"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/Views"
        }
      }
    ]
  }
  